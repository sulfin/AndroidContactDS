<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ContactDetailActivity">

    <androidx.cardview.widget.CardView
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="32dp" app:layout_constraintStart_toStartOf="parent"
            app:cardCornerRadius="150dp" app:cardElevation="0dp" android:id="@+id/cardView">
        <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent" tools:srcCompat="@tools:sample/avatars"
                android:id="@+id/contactDetailImage"/>
    </androidx.cardview.widget.CardView>
    <TextView
            android:text="Nom Prenom"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/contactDetailName"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="35dp" app:layout_constraintTop_toBottomOf="@+id/cardView"
            android:textStyle="bold" android:textSize="25sp" android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1" android:fontFamily="@font/alata"/>
    <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp" app:srcCompat="@drawable/ic_city" android:id="@+id/imageView2"
            android:layout_marginTop="50dp"
            app:layout_constraintTop_toBottomOf="@+id/contactDetailName" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp" android:tint="?attr/colorPrimary"/>
    <TextView
            android:text="City"
            android:layout_width="200dp"
            android:layout_height="wrap_content" android:id="@+id/contactDetailCity"
            app:layout_constraintStart_toEndOf="@+id/imageView2" android:layout_marginStart="32dp"
            app:layout_constraintTop_toTopOf="@+id/imageView2"
            app:layout_constraintBottom_toBottomOf="@+id/imageView2"/>
    <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp" app:srcCompat="@drawable/ic_mail" android:id="@+id/imageView4"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView2" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp" android:tint="?attr/colorPrimary"/>
    <TextView
            android:text="Email"
            android:layout_width="200dp"
            android:layout_height="wrap_content" android:id="@+id/contactDetailEmail"
            app:layout_constraintStart_toEndOf="@+id/imageView4" android:layout_marginStart="32dp"
            app:layout_constraintTop_toTopOf="@+id/imageView4"
            app:layout_constraintBottom_toBottomOf="@+id/imageView4"/>
    <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp" app:srcCompat="@drawable/ic_phone" android:id="@+id/imageView5"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView4" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp" android:tint="?attr/colorPrimary"/>
    <TextView
            android:text="040404040404"
            android:layout_width="200dp"
            android:layout_height="wrap_content" android:id="@+id/contactDetailPhone"
            app:layout_constraintStart_toEndOf="@+id/imageView5" android:layout_marginStart="32dp"
            app:layout_constraintTop_toTopOf="@+id/imageView5"
            app:layout_constraintBottom_toBottomOf="@+id/imageView5"/>
    <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp" app:srcCompat="@drawable/ic_cake" android:id="@+id/imageView6"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView5" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp" android:tint="?attr/colorPrimary"/>
    <TextView
            android:text="12/12/1912"
            android:layout_width="200dp"
            android:layout_height="wrap_content" android:id="@+id/contactDetailBirthday"
            app:layout_constraintStart_toEndOf="@+id/imageView6" android:layout_marginStart="32dp"
            app:layout_constraintTop_toTopOf="@+id/imageView6"
            app:layout_constraintBottom_toBottomOf="@+id/imageView6"/>
</androidx.constraintlayout.widget.ConstraintLayout>